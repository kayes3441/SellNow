{# Flash Messages Component #}
{% set messages = [
    {type: 'success', message: success, class: 'alert-success'},
    {type: 'error', message: error, class: 'alert-danger'},
    {type: 'info', message: info, class: 'alert-info'},
    {type: 'warning', message: warning, class: 'alert-warning'}
] %}

{% for flash in messages %}
    {% if flash.message %}
        <div class="alert {{ flash.class }} alert-dismissible fade show" role="alert">
            {{ flash.message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}
{% endfor %}
